<div class="row">
  <h1><%= @advertising_platform.name %> Banners</h1>
</div>

<div class="row">
  <div class="col-lg-12 text-right">
    <%= link_to 'New Banner', new_advertising_platform_banner_path(@advertising_platform), class: 'btn btn-primary' %>
    <%= link_to 'Back', advertising_platforms_path, class: 'btn btn-default' %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Active</th>
          <th>Views</th>
          <th>Max Views</th>
          <th>Clicks</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @banners.each do |banner| %>
          <tr>
            <th><%= banner.id %></th>
            <td><%= banner.name %></td>
            <td><%= banner.active %></td>
            <td><%= banner.views_count %></td>
            <td><%= banner.max_views_count %></td>
            <td><%= banner.click_count %></td>
            <td><%= link_to 'Show', banner_path(banner) %></td>
            <td><%= link_to 'Edit', '#' %></td>
            <td><%= link_to 'Delete', banner_path(banner), method: :delete, data: { confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>