<%= link_to 'New Platform', new_advertising_platform_path, class: 'btn btn-default pull-right' %>

<table class="table table-hover">
  <caption>Advertising Platforms</caption>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Active</th>
      <th>Platform URL</th>
      <th>Banner URL</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @advertising_platforms.each do |platform| %>
      <tr>
        <th><%= platform.id %></th>
        <td><%= platform.name %></td>
        <td><%= platform.acrive %></td>
        <td><%= platform.url %></td>
        <td>banner_url</td>
        <td><%= link_to 'Show', '#' %></td>
        <td><%= link_to 'Edit', '#' %></td>
        <td><%= link_to 'Delete', '#' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
