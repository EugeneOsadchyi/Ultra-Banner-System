<div class="row">
  <h1>Advertising Platforms</h1>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'New Platform', new_advertising_platform_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Active</th>
          <th>Platform URL</th>
          <th>Banner URL</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @advertising_platforms.each do |platform| %>
          <tr>
            <th><%= platform.id %></th>
            <td><%= platform.name %></td>
            <td><%= platform.active %></td>
            <td><%= platform.url %></td>
            <td><%= advertisement_advertising_platform_url(platform) %></td>
            <td><%= link_to 'Show', advertising_platform_path(platform) %></td>
            <td><%= link_to 'Edit', edit_advertising_platform_path(platform) %></td>
            <td><%= link_to 'Delete', advertising_platform_path(platform), method: :delete, data: { confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="instructions">
     <h4>Insert the banner url from the list above to your web site in a such way:</h4>
     <div class="snippet">
       <pre><code>&lt;iframe src="/advertising_platforms/1/advertisement"&gt;&lt;/iframe&gt</code></pre>
     </div>
   </div>
  </div>
</div>