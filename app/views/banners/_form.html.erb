<%= simple_form_for([@advertising_platform, @banner]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :max_views_count, input_html: { min: 1 } %>
    <%= f.input :active %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>