<%= simple_form_for([@advertising_platform, @banner]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :max_views_count, input_html: { min: 1 } %>
    <%= f.input :remote_image_url %>
    <%= f.input :image, as: :file %>
    <%= f.input :remove_image, as: :boolean if @banner.persisted? %>
    <%= f.input :active %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', advertising_platform_path(@advertising_platform), class: 'btn btn-default' %>
  </div>
<% end %>