<div class="row">
  <h1>Edit '<%= @banner.name %>' banner</h1>
</div>

<div class="row">
  <div class="col-lg-12">
<%= simple_form_for @banner do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :max_views_count, input_html: { min: 1 } %>
    <%= f.input :active %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', advertising_platform_path(@advertising_platform), class: 'btn btn-default' %>
  </div>
<% end %>